= form_for @order do |f|
  =error_messages_for @order

  .form-group
    = f.label 'Краткое содержание'
    = f.text_field :name, class: 'form-control'
  .row
    .col-md-12
      .form-group
        = f.label 'Текст приказа'
        = f.text_area :template, class: 'form-control js-ace', rows: 15

  .form-actions
    = f.submit 'Сохранить', class: 'btn btn-primary'